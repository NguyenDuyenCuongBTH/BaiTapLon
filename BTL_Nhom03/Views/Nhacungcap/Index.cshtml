@model IEnumerable<BTL_Nhom03.Nhacungcap>

@{
    ViewData["Title"] = "Index";
}

<h1>Nhà cung cấp</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm nhà cung cấp</a>
    <br><br>
    <a asp-action="Upload" class="btn btn-success">Nhập nhà cung cấp</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNCC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sdt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNCC" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNCC" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNCC" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
