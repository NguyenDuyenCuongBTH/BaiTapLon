@model IEnumerable<BTL_Nhom03.Nhanvien>

@{
    ViewData["Title"] = "Index";
}

<h1>Nhân viên</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm nhân viên</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNhanVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sdt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNhanVien" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNhanVien" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNhanVien" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
